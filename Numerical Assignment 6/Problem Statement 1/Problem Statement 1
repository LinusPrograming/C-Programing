#include <stdio.h>

void displaydigit(int ino)
{
    int idigit=0;

    while(ino!=0)
    {
        idigit=(ino%10);

        ino=ino/10;

        printf("%d\n",idigit);
    }

}
int main()
{
    int ivalue=0;
    printf("Enter a number");
    scanf("%d",&ivalue);
    displaydigit(ivalue);
    return 0;
}
