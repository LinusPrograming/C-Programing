            ///////////////////////////////
           // Output : E                //
          //           D D             //
         //            C C C          //
        //             B B B B       //
       //              A A A A A    //
      ///////////////////////////////

#include <stdio.h>
int main()
{
    int ircount1=0;
    int iccount2=0;

    int irow=0;
    int icol=0;
    char cvalue='\0';

    printf("Enter a character : ");
    scanf("%s",&cvalue);
    printf("Enter a number of rows :");
    scanf("%d",&irow);
    printf("Enter a number of col :");
    scanf("%d",&icol);
    

    for(ircount1=1;ircount1<=irow;ircount1++)
    {
        for(iccount2=1;iccount2<=ircount1;iccount2++)
        {
            printf("%c",cvalue);
        }
            cvalue--;
            printf("\n");
    }
    return 0;
}

