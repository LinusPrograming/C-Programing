
#include <stdio.h>
#include <stdlib.h>

int main()
{
    int irow=0;
    int icol=0;

    int inum1=0;
    int inum2=0;
    int ispace=0;

    printf("Enter number of rows :");
    scanf("%d",&irow);

  icol=irow;

    for(inum1=1;inum1<=irow;inum1++)
    {
        for(ispace=1;ispace<=icol-1;ispace++)
        {
            printf(" ");
        }
        for(inum2=1;inum2<=inum1;inum2++)
        {
            printf("*");
        }
         printf("\n");
        icol--;

    }

    return 0;
}
